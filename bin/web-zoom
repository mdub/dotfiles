#! /usr/bin/env ruby
# frozen_string_literal: true

require "clamp"
require "uri"

Clamp do

  self.description = "Join Zoom meeting in browser"

  parameter "MEETING", "meeting ID"
  parameter "[PASSWORD]", "meeting password"

  option %w[-U --show-url], :flag, "print URLs, rather than opening them"

  def execute
    open_in_browser(
      "https://zoom.us/wc/join/#{meeting}",
      pwd: password
    )
  end

  protected

  def parse_parameters; end

  def parse_parameters
    case remaining_arguments.first
    when %r{^https://[^/]+\.zoom\.us/j/(\w+)(?:\?pwd=(.+))?$}
      remaining_arguments[0, 1] = [Regexp.last_match(1), Regexp.last_match(2)].compact
    end
    super
  end

  private

  def open_in_browser(url, parameters = {})
    parameters = parameters.reject { |_k, v| v.nil? }
    url += "?#{URI.encode_www_form(parameters)}" unless parameters.empty?
    if show_url?
      puts url
    else
      system("open", url)
    end
  end

end
