#! /usr/bin/env ruby

require 'bundler/inline'

gemfile do
  source 'https://rubygems.org'
  gem 'clamp'
  gem 'ulid'
  gem 'time'
end

Clamp do

  parameter "[TIME]", "time string", :default => "now", &Time.method(:parse)

  def execute
    puts ULID.generate(time)
  end

  def default_time
    Time.now
  end

end
